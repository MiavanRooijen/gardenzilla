@model gardenzilla.Models.Person
@{
    ViewData["Title"] = "Contact";
}

<h1>@ViewData["Title"] </h1>
<form method = "post"> 
    <div>Voornaam: <input type= "text" name= "firstname" />  </div>
    @Html.ValidationMessageFor(m => m.FirstName)
    <div>Acternaam: <input type= "text" name= "lastname" />  </div>
        @Html.ValidationMessageFor(m => m.LastName)
